@model ContadeLuz.Models.Conta

<div class="form-horizontal">
    <form action="Edit" method="Post">

        <div class="form-group">
            <label>Id</label>
            <input  class="form-control"
                    type="text" name="id"
                    value="@Model.id"/>
        </div>

        <div class="form-group">
            <label>Data Leitura</label>
            <input  class="form-control"
                    type="text" name="dataLeitura"
                    value="@Model.dataLeitura"/>
        </div>

        <div class="form-group">
            <label>Numero Leitura</label>
            <input  class="form-control"
                    type="text" name="numeroLeitura"
                    value="@Model.numeroLeitura"/>
        </div>
        <div class="form-group">
            <label>Quantidade de Kw</label>
            <input  class="form-control"
                    type="text" name="qtdKw"
                    value="@Model.qtdKw"/>
        </div>
        <div class="form-group">
            <label>Valor da Conta</label>
            <input  class="form-control"
                    type="text" name="valorConta"
                    value="@Model.valorConta"/>
        </div>
        <div class="form-group">
            <label>Data do Pagamento</label>
            <input  class="form-control"
                    type="text" name="dataPagamento"
                    value="@Model.dataPagamento"/>
        </div>

        <div class="form-group">
            <label>Media de Consumo</label>
            <input  class="form-control"
                    type="text" name="mediaConsumo"
                    value="@Model.mediaConsumo"/>
        </div>

        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>